/* pages/room/room.wxss */
.box {
  width: 100%;
  height: 180px;
  display: flex;
  flex-direction: row;
  justify-content: center;
  flex-wrap: wrap;
  margin: 10% auto;
}

.boxitem {
  width: 80%;
  height: 60%;
  margin: 35rpx;
  background-color: white;
  border-radius: 25rpx;
  display: flex;
  flex-direction: column;
}

.boxitem_top {
  width: 100%;
  height: 100%;
  margin: 0 auto;
  display: flex;
  justify-content: center;
  align-items: center;
}

.boxitem_top image {
  width: 100%;
  height: 100%;
   border-radius: 15rpx;
}

.boxitem_bottom {
  font-weight: 400;
  text-align: center;
}